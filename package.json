{
  "name": "kana-flashcard-app",
  "version": "1.0.0",
  "description": "A **Japanese Kana Flashcard** Web App for **practicing** Japanese Kana, specifically Hiragana and Katakana.",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:run": "vitest run",
    "format": "npx prettier . --write",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "test:db:generate": "npx prisma generate --schema=__tests__/db/schema.prisma",
    "test:db:push": "npx prisma db push --schema=__tests__/db/schema.prisma",
    "test:db:setup": "npm run test:db:generate && npm run test:db:push",
    "test:db": "vitest run --config vitest.config.db.mts",
    "test:db:watch": "vitest --config vitest.config.db.mts",
    "test:db:clean": "cross-env NODE_ENV=test && (rm -f __tests__/db/test.db || del __tests__\\db\\test.db 2>nul || true)",
    "test:e2e": "cross-env NODE_ENV=test npx playwright test ",
    "test:e2e:build": "cross-env NODE_ENV=test next build",
    "test:e2e:setup": "cross-env NODE_ENV=test pnpm exec prisma generate && cross-env NODE_ENV=test pnpm exec prisma migrate deploy && cross-env NODE_ENV=test pnpm exec prisma db seed",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [],
  "author": "Sakan Nirattisaykul",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "6.10.1",
    "@vercel/analytics": "^1.5.0",
    "next": "^15.3.4",
    "next-auth": "5.0.0-beta.29",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.3.4",
    "@playwright/test": "^1.53.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.7",
    "@types/react": "19.1.8",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^7.0.3",
    "eslint": "9.29.0",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prisma": "^6.10.1",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
